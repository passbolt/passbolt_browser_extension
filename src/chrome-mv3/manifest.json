{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "passbolt",
  "version": "4.3.1",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "externally_connectable": {},
  "icons": {
    "16": "webAccessibleResources/img/icons/icon-16.png",
    "48": "webAccessibleResources/img/icons/icon-48.png",
    "128": "webAccessibleResources/img/icons/icon-128.png"
  },
  "background": {
    "service_worker": "serviceWorker/serviceWorker.js"
  },
  "action": {
    "default_icon": "webAccessibleResources/img/icons/icon-32.png",
    "default_title": "Passbolt Quickaccess",
    "default_popup": "webAccessibleResources/quickaccess.html?passbolt=quickaccess"
  },
  "commands": {
    "passbolt-open": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Open passbolt in a new tab!"
    }
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "web_accessible_resources": [
    "webAccessibleResources/passbolt-iframe-recover.html",
    "webAccessibleResources/passbolt-iframe-setup.html",
    "webAccessibleResources/passbolt-iframe-login.html",
    "webAccessibleResources/passbolt-iframe-app.html",
    "webAccessibleResources/passbolt-iframe-account-recovery.html",
    "webAccessibleResources/passbolt-iframe-file.html",
    "webAccessibleResources/passbolt-iframe-in-form-call-to-action.html",
    "webAccessibleResources/passbolt-iframe-in-form-menu.html"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
  }
}
